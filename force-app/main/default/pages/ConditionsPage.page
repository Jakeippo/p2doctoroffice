<apex:page controller="SymptomCheckerController">
    <style>
        body {
            font-style:Grotesque Sans;
            background-color: #d3d3d3;
        }
        .column {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: black;
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
        }
        .column a {
            padding: 8px 8px 8px 32px;
            text-decoration: none;
            font-size: 25px;
            color: white;
            display: block;
            transition: 0.3s;
        }
        .column .close {
            position: absolute;
            top: 0;
        }
        .open {
            font-size: 20px;
            cursor: pointer;
            background-color: #418544;
            color: black;
            border: none;
        }
        #mainSec {
            transition: margin-left .5s;
            padding: 16px;
        }
        /* On smaller screens, where height is less than 450px, change the style of the sidenav (less padding and a smaller font size) */
        @media screen and (max-height: 600px) {
            .sidebar {padding-top: 15px;}
            .sidebar a {font-size: 20px;}
        }
    </style>
    <script>
        function openBtn() {
            document.getElementById("sidebar").style.width = "200px";
            document.getElementById("mainSec").style.marginLeft= "200px";
        
        }
        
        function closeBtn() {
            document.getElementById("sidebar").style.width = "0";
            document.getElementById("mainSec").style.marginLeft= "0";
        }
    </script>
                    
    <!-- sidebar -->
    <div id="sidebar" class="column">
        <apex:form>
        <a href="javascript:void(0)" class="close" onclick="closeBtn()">x</a>
        <!-- <apex:commandLink action="{!existingUser}" value= "Home" /> -->
        <!-- <apex:commandLink action="{!AppointmentBookingPage}" value="Appointment Booker" />  -->
        <a href="#">Symptom Checker</a>
        <!-- <apex:commandLink action="{!loginPage}" value="Log Out" />  -->
        </apex:form>
    </div>
    <body>
        <!-- PASTE YOUR CODE INSIDE mainSec-->
        <div id="mainSec">
            <div>
                <div  class="header" style="color: white; text-align:center; font-size: 90px; font-style:Grotesque Sans;
                                            background-color:black;
                                            border: 1px solid black; ">
                    Follow-up Questions
                    <button style="float: left; text-align:center" class="open" onclick="openBtn()">â˜°</button>
                </div>
            </div>
            <apex:pageBlock>
                <apex:messages/>
                <apex:form>
                    <apex:pageBlockSection title="Conditions page">
                        <apex:pageBlockTable value="{!likelyConditions}" var="condition">
                            <apex:column value="{!condition.name}" headerValue="Condition name" />
                            <apex:column value="{!condition.probability}" headerValue="Condition probability" />
                            <apex:column value="{!condition.categories[0]}" headerValue="Medical Category" />
                            <apex:column headerValue="Book Appointment">
                                <apex:commandLink value="Book an Appointment" action="{!bookingPage}">
                                    <apex:param name="conditionToSend" value="{!condition.categories[0]}" assignTo="{!categoryToSend}" />
                                </apex:commandLink>
                            </apex:column>
                        </apex:pageBlockTable>
                    </apex:pageBlockSection>
                </apex:form>
            </apex:pageBlock>
        </div>
    </body>
</apex:page>
